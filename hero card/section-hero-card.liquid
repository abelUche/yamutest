{{ 'section-hero-card.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Section Hero Card",
  "settings": [
    {
      "type": "image_picker",
      "id": "card1_image",
      "label": "Card 1 Image"
    },
    {
      "type": "text",
      "id": "card1_title",
      "label": "Card 1 Title",
      "default": "Card Title 1"
    },
    {
      "type": "text",
      "id": "card1_price",
      "label": "Card 1 Price",
      "default": "$100.00"
    },
    {
      "type": "text",
      "id": "card1_discount_price",
      "label": "Card 1 Discount Price",
      "default": "$80.00"
    },
    {
      "type": "image_picker",
      "id": "card2_image",
      "label": "Card 2 Image"
    },
    {
      "type": "text",
      "id": "card2_title",
      "label": "Card 2 Title",
      "default": "Card Title 2"
    },
    {
      "type": "text",
      "id": "card2_price",
      "label": "Card 2 Price",
      "default": "$120.00"
    },
    {
      "type": "text",
      "id": "card2_discount_price",
      "label": "Card 2 Discount Price",
      "default": "$100.00"
    },
    {
      "type": "image_picker",
      "id": "card3_image",
      "label": "Card 3 Image"
    },
    {
      "type": "text",
      "id": "card3_title",
      "label": "Card 3 Title",
      "default": "Card Title 3"
    },
    {
      "type": "text",
      "id": "card3_price",
      "label": "Card 3 Price",
      "default": "$150.00"
    },
    {
      "type": "text",
      "id": "card3_discount_price",
      "label": "Card 3 Discount Price",
      "default": "$120.00"
    }
  ],
  "presets": [
    {
      "name": "3 Cards Section",
      "category": "Image"
    }
  ]
}
{% endschema %}

<section class="three-cards-section">
  <div class="cards-container">
    {% for i in (1..3) %}
    {% assign image_key = "card" | append: i | append: "_image" %}
    {% assign title_key = "card" | append: i | append: "_title" %}
    {% assign price_key = "card" | append: i | append: "_price" %}
    {% assign discount_price_key = "card" | append: i | append: "_discount_price" %}
    <div class="card">
      {% if section.settings[image_key] %}
      <img src="{{ section.settings[image_key] | image_url: width: 300 }}" alt="Card {{ i }} Image">
      {% endif %}
      <div class="card-details">
        <h3>{{ section.settings[title_key] | default: "Default Title" }}</h3>
        <p class="price">
          <span class="discount-price">{{ section.settings[discount_price_key] | default: "$0.00" }}</span>
          <span class="original-price">{{ section.settings[price_key] | default: "$0.00" }}</span>
        </p>
      </div>
    </div>
    {% endfor %}
    <div class="card">
    </div
  </div>
</section>



